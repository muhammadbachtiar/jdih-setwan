<?php

// Docker environment variables example
// Copy this file to env.php when using Docker setup
// These values match the docker-compose.yml database service

defined('DB_HOST') or define('DB_HOST', 'db');
defined('DB_DATABASE_PORT') or define('DB_DATABASE_PORT', '3306');
defined('DB_DATABASE') or define('DB_DATABASE', 'ildis_v4');
defined('DB_USER') or define('DB_USER', 'dev');
defined('DB_PASSWORD') or define('DB_PASSWORD', 'dev');